<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Are_you_happy"
        android:text="Are you happy"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yup I couldnt be happier"
        android:id="@+id/answer_Yes"
        android:onClick="onYesbuttonclick"
        android:layout_below="@+id/Are_you_happy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:hint="Pick me!" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/answer_No"
        android:onClick="onNobuttonclick"
        android:layout_below="@+id/answer_Yes"
        android:layout_centerHorizontal="true"
         android:hint="No Pick me!"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/app_usersname"
        android:hint="Put name here!"
        android:layout_alignTop="@+id/Are_you_happy"
        android:layout_toRightOf="@+id/Are_you_happy"
        android:layout_toEndOf="@+id/Are_you_happy" />



</RelativeLayout>
